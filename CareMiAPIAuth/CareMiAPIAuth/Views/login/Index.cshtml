@{
}

@model List<Login>


<h2>Logins</h2>

<table class="table">
    <thead>

        <tr>
            <th>Código</th>
            <th>Código de Usuario</th>
            <th>Numero de CPF</th>
            <th>Ativo</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var login in Model)
        {
            <!-- Uma linha para cada produto -->
            <tr>

                <td>@login.cdLogin</td>

                <td>@login.cdUsuario</td>

                <td>@login.nrCpf</td>

                <td>@login.fgAtivo</td>

                <!-- Coluna para o link de edição do produto -->
                <td>
                    <a asp-controller="Login" asp-action="Edit" asp-route-ID="@login.cdLogin">Editar</a>

                    <!-- Coluna para os links de exclusão do produto -->

                    <a asp-controller="Login" asp-action="Delete" asp-route-ID="@login.cdLogin">Excluir</a>
                </td>


            </tr>
        }
    </tbody>
</table>
<a asp-controller="Login" asp-action="Create">Novo Login</a>